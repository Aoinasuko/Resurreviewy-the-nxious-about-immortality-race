<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="ApparelMakeableBase">
	<defName>Resur_SlaveStrap</defName>
	<label>Resur SlaveStrap</label>
	<description>Costumes for Resurreviewy slaves.</description>
	<graphicData>
		<texPath>BEPFT_Cloth/SlaveStrap/SlaveStrap</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shaderType>CutoutComplex</shaderType>
	</graphicData>
	<techLevel>Medieval</techLevel>
	<costStuffCount>20</costStuffCount>
	<stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
	</stuffCategories>
	<costList>
		<Steel>10</Steel>
	</costList>
	<tradeability>Sellable</tradeability>
	<recipeMaker>
		<researchPrerequisite>Resur_Costumes</researchPrerequisite>
		<recipeUsers>
			<li>Resur_CraftTable</li>
		</recipeUsers>
	</recipeMaker>
	<thingCategories>
		<li>Resur_Apparel</li>
	</thingCategories>
	<equippedStatOffsets>
		<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.3</SlaveSuppressionOffset>
    </equippedStatOffsets>
	<statBases>
		<MaxHitPoints>200</MaxHitPoints>
		<WorkToMake>1500</WorkToMake>
		<Mass>0.5</Mass>
		<Flammability>0.75</Flammability>
		<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
		<EquipDelay>2</EquipDelay>
	</statBases>
	<apparel>
		<developmentalStageFilter>Child,Adult</developmentalStageFilter>
		<bodyPartGroups>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Legs</li>
		</bodyPartGroups>
		<wornGraphicPath>BEPFT_Cloth/SlaveStrap/SlaveStrap</wornGraphicPath>
		<layers>
			<li>OnSkin</li>
		</layers>
		<tags>
			<li>Resur_Apparel_Slave</li>
		</tags>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>10</weight>
				<only>(0.8,0,0.8,1)</only>
			</li>
			<li>
				<weight>10</weight>
				<only>(0.8,0.1,0.1,1)</only>
			</li>
			<li>
				<weight>10</weight>
				<only>(0.1,0.1,0.8,1)</only>
			</li>
		</options>
	</colorGenerator>
	<comps>
		<li>
			<compClass>CompColorable</compClass>
		</li>
	</comps>
</ThingDef>
</Defs>
